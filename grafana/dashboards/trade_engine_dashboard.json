{
  "title": "Trade Engine Overview",
  "uid": "trade-engine-overview",
  "schemaVersion": 30,
  "version": 1,
  "refresh": "5s",
  "timezone": "browser",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Orders Received per Second",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(orders_received_total[1m])",
          "interval": "",
          "legendFormat": "orders/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 2000 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Orders Matched per Second",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(orders_matched_total[1m])",
          "legendFormat": "matches/sec"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops"
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Order Latency Seconds (p95)",
      "gridPos": { "x": 0, "y": 8, "w": 24, "h": 8 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(order_latency_seconds_bucket[1m])) by (le))",
          "legendFormat": "latency p95"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      }
    }
  ],
  "templating": {
    "list": []
  }
}